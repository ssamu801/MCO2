<html>
<head>
    <title>Sign Up Page</title>
    <link rel="stylesheet" media="all" href="/css/register.css"> 
</head>
<body>
    <!-- NAVIGATION BAR -->
    <div class="navbar">
        <a class="logo" href="/home"> <img src="/images/logo.png" alt="Logo"></a>
        <a class="name" href="/home">PROFADVISOR</a>
        <!-- <a class="navbutton" href="#about">ABOUT US</a> -->
        <a class="navbutton" href="/login">LOGIN</a>
    </div>


    <!-- REGISTER  -->
    <div class="container"> 
        <div class="reg-box">
            <div class="reg-frame">
                <span class="register">SIGN UP</span>
                
                <form id="reg-form" action="/register" method="POST">

                    <div class="form" id="username" name="username">
                        <label for="username">Username</label> 
                        <br>
                        <input type="text" name="username" id="username-input" required>
                    </div>
                    <br>
                    <div class="form" id="email-div">
                        <label for="email-text">Email</label> 
                        <br>
                        <input type="email" name="email" id="email-input" required>
                    </div>

                    <div class="form" id="reg-password-div">
                        <label for="password">Password</label> 
                        <br>
                        <input type="password" name="password" id="password" required>
                    </div>

                    <div class="form" id="button-div">
                        <button type="submit" id="reg-button"><span class="reg-text">SIGN UP</span></button> 
                        <br>
                        <span class="need-acc">Already a user? <a href="/login">LOGIN</a></span>
                    </div>
                    
                </form>
                    
            </div>

        </div>
    </div>
</body>
</html>
