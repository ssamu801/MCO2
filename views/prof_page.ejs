<html>
<head>
    <link rel="stylesheet" type="text/css" media="all" href="/css/prof_reviews.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    
    

    <title><%= name %> Reviews</title>

</head>

<body>
    <!------------------NAVBAR--------------------->
    <div class="navbar">
        <a class="logo" href="#home"> <img src="/images/logo.png" alt="Logo"></a>
        <a class="name" href="#home">PROFADVISOR</a>
        <a class="navbutton" href="#settings">SETTINGS</a>
        <a class="navbutton" href="#search">SEARCH</a>
    </div>

    <!---------------MAIN CONTAINER---------------------------->    
    <div class="container">
        <div class="content-container">
            <p class="heading">REVIEWS OF <br>
            <span class="prof_name"><%= name %> </span>
            <span class="course_name"><%= course %></span>
            </p>
            <div class="reviews">
                <% if (reviews.length == 0){ %>
                    <p class="empty">There are no reviews for this course yet.</p>
                    <% } %>
                <ul>
                    <% reviews.forEach(function(review){ %>
                    <li class="review-content"> 
                        <div class="review-container">
                            <div class="user-icon">
                                <img src="/images/icon.png">
                            </div>
                            <div class="name">
                                <span>Review by</span>
                                <p class="username">gpwtqibbia</p>
                            </div>
                            <div class="user-review">
                                <p><%= review.reviewContent %> </p>
                            </div>
                            <div class="review-likes">
                                <span class="fa-solid fa-thumbs-up"></span>
                                <span class="likes"> <%= review.likes %></span>
                            </div>
                            <div class="like-btn">
                                <span class="fa-thumbs-up fa-regular " id="like=btn"></span>
                            </div>
                        </div>
                    </li>  
                    <% }); %>
                </ul>
        </div>
        </div>
    </div>

<script src="/javascript/prof_page.js"></script>
</body>

</html>
