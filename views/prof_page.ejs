<html>
<head>
    <link rel="stylesheet" type="text/css" media="all" href="/css/prof_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    

    <title>Prof Page</title>

</head>

<body>
    <!------------------NAVBAR--------------------->
    <div class="navbar">
        <a class="logo" href="#home"> <img src="/images/logo.png" alt="Logo"></a>
        <a class="name" href="#home">PROFADVISOR</a>
        <a class="navbutton" href="#settings">SETTINGS</a>
        <a class="navbutton" href="#search">SEARCH</a>
    </div>

    <!---------------MAIN CONTAINER---------------------------->    
    <div class="container">
        <div class="content-container">
            <!---------------LEFT SECTION--------------------------->
            <div class="vertical-container">
                <section class="icon">
                    <img src="/images/icon.png">
                </section>
                <!------------COURSES TABLE------------------->
                <section class="courses">
                    <ul>
                        <li class="header">Courses</li>
                        <% for (let i = 0; i < prof_profile.courses.length; i++ ){ %>
                        <li><div class="listed-courses" onclick="openCCPROG1()"><%= prof_profile.courses[i] %></div></li>
                        <% }; %>
                    </ul>
                </section>
            </div>
            <!--------------RIGHT SECTION-------------------------->
            <div class="right-container">
                <div class="info-container">
                    <!-------------------PROF INFO------------------>
                    <div class="info">
                         <header>Prof Info:</header>
                        <p> Name: <%= prof_profile.name %><br>
                            <% for (let i = 0; i < prof_profile.courses.length; i++ ){ %>
                            <br><%= prof_profile.courses[i] %> - <%= prof_profile.courses_name[i] %>
                            <% }; %>   
                            <br><br>
                            College Department: <br><%= prof_profile.college %> - <%= prof_profile.department %> Department
                            
                        </p>
                    </div>    
                </div>
                <!-------------ADD REVIEWS SECTION------------------->
                <div class="review-box">
                    <!-----------ADD STAR RATING------------->
                    <div class="star-container">
                        <p>Rate</p>
                        <a href="#" class="star1"></a>
                        <a href="#" class="star2"></a>
                        <a href="#" class="star3"></a>
                        <a href="#" class="star4"></a>
                        <a href="#" class="star5"></a>
                            <div class="stars">
                            </div>
                    </div>
                    <hr>
                    <!----------ADD REVIEW---------------------------->
                    <div class="add-review-container">
                        <button type="submit" class="add-review-button" onclick="openReviewForm()">Add a review</button>
                    </div>
                </div>
                <!--------------------AVERAGE STAR RATING--------------->
                <div class="ratings-container">
                    <hr>
                    <div class="ratings-content">
                        <p>Average Rating: 4/5 &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                            &nbsp; &nbsp; &nbsp; &nbsp;109 users</p>
                    </div>
                    <div class="average-stars">
                    </div>
                </div>
                <div class="reviews">
                    <!---------------------POPULAR REVIEWS------------------------>
                    <section class="popular-reviews">
                        <header class="section-heading">POPULAR REVIEWS</header>
                        <ul>
                            <% dbreviews.forEach(function(review){ %>
                            <li class="review-content"> 
                                <div class="review-container">
                                    <div class="user-icon">
                                        <img src="/images/icon.png">
                                    </div>
                                    <div class="name">
                                        <span>Review by</span>
                                        <p class="username">gpwtqibbia</p>
                                    </div>
                                    <div class="user-rating">
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                    </div>
                                    <div class="user-review">
                                        <p><%= review.reviewContent %> </p>
                                    </div>
                                    <div class="review-likes">
                                        <span class="fa-solid fa-thumbs-up"></span>
                                        <span class="likes"> <%= review.likes %></span>
                                    </div>
                                </div>
                            </li>  
                            <% }); %>
                        </ul>
                
                    </section>
                    <div class="divider"></div>
                    <!--------------RECENT REVIEWS-------------------------->
                <section class="recent-reviews">
                           <header class="section-heading">RECENT REVIEWS</header>
                        <ul>
                            <% reviews.forEach(function(review){ %>
                            <li class="review-content"> 
                                <div class="review-container">
                                    <div class="user-icon">
                                        <img src="/images/icon.png">
                                    </div>
                                    <div class="name">
                                        <span>Review by</span>
                                        <p class="username">viahle</p>
                                    </div>
                                    <div class="user-rating">
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                    <div class="user-review">
                                        <p><%= review.reviewContent %> </p>
                                    </div>
                                    <div class="review-likes">
                                        <span class="fa-solid fa-thumbs-up"></span>
                                        <span class="likes"> <%= review.likes %></span>
                                    </div>
                                </div>
                            </li>
                            <% }); %>
                        </ul>
                
                </section>
                <!--------REVIEW FORM POPUP-------------->
                <div class="review-form-popup" id="review-form-popup">
                    <h2>Write a review about this prof!</h2>
                    <form action="/saveReview" method="post">
                        <input type="hidden" value="<%= prof_profile.id %>" name="profID">
                        <input type="hidden" value="<%= prof_profile.name %>" name="prof_name">
                        <textarea name="reviewContent" id="text-review" class="field" placeholder="Add a review..." required></textarea>
                        <label for="text-review">Course</label><br>
                        <input type="text" id="course-reviews" name="course" placeholder="eg. CCAPDEV" required>
                        <button type="submit" onclick="closeReviewForm()">Submit review</button>
                    </form>
                </div>
                <!----------REVIEWS PER COURSE------------------------------>
                <div class="listed-courses-reviews" id="listed-course1">
                    <ul>
                        <h2>CCPROG1</h2>
                        <li>
                            <div class="review-container">
                                <div class="user-icon">
                                    <img src="/images/icon.png">
                                </div>
                                <div class="name">
                                    <span>Review by</span>
                                    <p class="username">httpmj</p>
                                </div>
                                <div class="user-rating">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                </div>
                                <div class="user-review">
                                    <p>He teaches well in a way na matututo ka talaga kahit na zero experience ka when it comes to programming.</p>
                                </div>
                            </div>
                    </li>
                        <li>
                            <div class="review-container">
                                <div class="user-icon">
                                    <img src="/images/icon.png">
                                </div>
                                <div class="name">
                                    <span>Review by</span>
                                    <p class="username">viahle</p>
                                </div>
                                <div class="user-rating">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                                <div class="user-review">
                                    <p>Very nice prof!</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <button type="button" onclick="closeCCPROG1()">Close</button>
                </div>

                <div class="listed-courses-reviews" id="listed-course2">
                    <h2>CCPROG2</h2>
                    <ul>
                        <li>
                            <div class="review-container">
                                <div class="user-icon">
                                    <img src="/images/icon.png">
                                </div>
                                <div class="name">
                                    <span>Review by</span>
                                    <p class="username">shmowzow</p>
                                </div>
                                <div class="user-rating">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                                <div class="user-review">
                                    <p> Activities are not hard but also not easy, pero sure thing na feasible mga pinapagawa nya. Considerate din sa 
                                        deadlines and naka ilang extensions sya sa activities and MPs namin. Di rin sya tamad magturo and mag explain 
                                        so be open lang magtanong sakanya sure thing na mag eexplain sya. Points out inefficiencies din sa activities 
                                        and MPs pero for the purpose lang na mapoint na pwede gawing better, he doesn't give any minus points as long 
                                        as your code works and is not prone to error. Overall a very good and fair prof.</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="review-container">
                                <div class="user-icon">
                                    <img src="/images/icon.png">
                                </div>
                                <div class="name">
                                    <span>Review by</span>
                                    <p class="username">html1234</p>
                                </div>
                                <div class="user-rating">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                                <div class="user-review">
                                    <p> He teaches in a way na talagang maiintindihan mo regardless if you don't have experience in programming. 
                                        He will give you a grade that you deserve (he doesn't curve grades or give additional works para fair sa lahat) 
                                        and gives activities for you to practice. Had him for f2f im not sure lang sa online setup.</p>
                                </div>
                                
                            </div>
                        </li>
                    </ul>
                    <button type="button" onclick="closeCCPROG2()">Close</button>
                </div>

                <div class="listed-courses-reviews" id="listed-course3">
                    <h2>CCPROG3</h2>
                    <div class="review-container">
                        <div class="user-icon">
                            <img src="/images/icon.png">
                        </div>
                        <div class="name">
                            <span>Review by</span>
                            <p class="username">gpwtqibbia</p>
                        </div>
                        <div class="user-rating">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                        </div>
                        <div class="user-review">
                            <p> Teaches well and lenient with his students. He always asks if na gets niyo ang topic (so dont be afraid to ask questions). 
                                He’s super nice as well like if di ka makapasa ng assignment, he usually does extensions. Just do everything and you’ll pass for sure.</p>
                        </div>
                    </div>
                    <button type="button" onclick="closeCCPROG3()">Close</button>
                </div>

                <div class="listed-courses-reviews" id="listed-course4">
                    <h2>CCAPDEV</h2>
                    <ul>
                        <li>
                            <div class="review-container">
                                <div class="user-icon">
                                    <img src="/images/icon.png">
                                </div>
                                <div class="name">
                                    <span>Review by</span>
                                    <p class="username">ISvdra</p>
                                </div>
                                <div class="user-rating">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                                <div class="user-review">
                                    <p> Really lenient when it comes to deadlines kasi due lahat ng requirements at the end of the term.
                                        May recitation siya during class thats part of your grade. Teaching style is ok. 
                                        He explains the concepts very well with examples.
                                    </p>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <button type="button" onclick="closeCCAPDEV()">Close</button>
                </div>
                </div>
            </div>
        </div>
    </div>

<script src="/javascript/prof_page.js"></script>
</body>

</html>